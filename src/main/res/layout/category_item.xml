<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_dropshadow">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/category_image_desc"
        android:scaleType="centerCrop"
        android:src="@drawable/seafood2"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/counter_text_background"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:text="@string/navigation_category_potable"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark_nodisable"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:typeface="serif" />

    </LinearLayout>

    <TextView
        android:id="@+id/category_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/counter_text_background"
        android:text="3333333333333"
        android:textAlignment="center"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/category_image"
        android:layout_alignRight="@+id/category_image"
        android:layout_alignEnd="@+id/category_image"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:padding="2dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small.Inverse"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp" />

</RelativeLayout>